html
  head
    title Grid

    style(type="text/css").
      body {
        background: white;
        height: 100%;
        width: 100%;
      }

      .container {
        display: grid
        grid-template-columns: repeat(#{column}, 1fr),
        grid-template-rows: repeat(#{row}, 1fr)
      }

      .grid-item {
        background: darkblue;
      }

  body
    .container
    - let totalGridItemsCount  = column * row;
    
      while totalGridItemsCount > 0
        - totalGridItemsCount=totalGridItemsCount-1;
        .grid-item=#{totalGridItemsCount}